<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="135dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textView"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="#9a8aa5"
                android:fontFamily="@font/spicy_rice"
                android:gravity="center"
                android:text="E-Store Dashboard  "
                android:textColor="#535063"
                android:textSize="32dp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="33dp"
            android:orientation="horizontal">

        </LinearLayout>

        <LinearLayout
            android:id="@+id/editprofile"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingBottom="20dp">


            <ImageView

                android:layout_width="49dp"
                android:layout_height="49dp"
                android:scaleType="fitXY"
                android:src="@drawable/edit_profile_image"

                />


            <TextView

                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:paddingLeft="15dp"
                android:paddingTop="7dp"
                android:text="Edit Profile "
                android:textSize="24dp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/addproduct"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingBottom="20dp">


            <ImageView

                android:layout_width="49dp"
                android:layout_height="49dp"
                android:scaleType="fitXY"
                android:src="@drawable/add_product_image"

                />


            <TextView

                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:paddingLeft="15dp"
                android:paddingTop="7dp"
                android:text="Add Product"
                android:textSize="24dp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/showproduct"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingBottom="20dp">


            <ImageView

                android:layout_width="49dp"
                android:layout_height="49dp"
                android:scaleType="fitXY"
                android:src="@drawable/show_product_image"

                />


            <TextView

                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:paddingLeft="15dp"
                android:paddingTop="7dp"
                android:text="Show Product "
                android:textSize="24dp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/showorder"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingBottom="20dp">


            <ImageView

                android:layout_width="49dp"
                android:layout_height="49dp"
                android:scaleType="fitXY"
                android:src="@drawable/show_order_image"

                />


            <TextView

                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:paddingLeft="15dp"
                android:paddingTop="7dp"
                android:text="Show Order"
                android:textSize="24dp" />
        </LinearLayout>



        <LinearLayout
            android:id="@+id/logout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingBottom="20dp">


            <ImageView

                android:layout_width="49dp"
                android:layout_height="49dp"
                android:scaleType="fitXY"
                android:src="@drawable/logout_image"

                />


            <TextView

                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:paddingLeft="15dp"
                android:paddingTop="7dp"
                android:text="Logout "
                android:textSize="24dp" />
        </LinearLayout>

    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>